<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>JerseyHibernateApp</display-name>
	<servlet>
		<!-- Register Jersey(servlet implementation which scans predefined classes 
			for REST resources) as the Dispatcher Servlet -->
		<servlet-name>controlServlet</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<!-- Register resources and providers under com.theo.JerseyJavaResources. -->
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>com.theo.JerseyJavaResources</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- Map incoming requests to specific Dispatcher Servlet -->
	<servlet-mapping>
		<servlet-name>controlServlet</servlet-name>
		<url-pattern>/webapi/*</url-pattern>
	</servlet-mapping>
</web-app>
